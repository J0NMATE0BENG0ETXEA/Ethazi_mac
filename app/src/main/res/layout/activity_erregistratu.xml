<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Erregistratu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/editTextizenabizen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="107dp"
            android:layout_marginRight="107dp"
            android:ems="10"
            android:hint="@string/txtizenabizen"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonErregis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTexttelefonoa"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:text="@string/btnReserba" />

        <EditText
            android:id="@+id/editTextmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="109dp"
            android:layout_marginRight="109dp"
            android:ems="10"
            android:hint="@string/txtemail"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPass2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="143dp"
            android:layout_marginRight="143dp"
            android:text="@string/txtopcional"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editPass2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editPass1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="49dp"
            android:layout_marginEnd="111dp"
            android:layout_marginRight="111dp"
            android:ems="10"
            android:hint="@string/txtsartupasahitza"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editPass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextuser"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:ems="10"
            android:hint="@string/txtsartupasahitza"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="108dp"
            android:layout_marginRight="108dp"
            android:ems="10"
            android:hint="@string/txterabiltzailesartu"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTexttelefonoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextmail"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="109dp"
            android:layout_marginRight="109dp"
            android:ems="10"
            android:hint="@string/txttelefono"
            android:inputType="number" />

    </RelativeLayout>

</ScrollView>